            <Button FontSize="20" Click="ButtonCalculator_Click">4</Button>
            <Button FontSize="20" Click="ButtonCalculator_Click">5</Button>
            <Button FontSize="20" Click="ButtonCalculator_Click">6</Button>
            <Button FontSize="20" Click="ButtonCalculator_Click">7</Button>
            <Button FontSize="20" Click="ButtonCalculator_Click">8</Button>
            <Button FontSize="20" Click="ButtonCalculator_Click">9</Button>
